      <h2><%= link_to category.name, category_path(category), class: "link" %></h2>
    </div>
  <% end %>
</div>


<h2 class="mb-4"><%= link_to "Create", new_category_path, class: "btn btn-dark ms-3 " %></h2>
</div>
