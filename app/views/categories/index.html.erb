<link rel="stylesheet" href="_card.scss" />

<div class="cards-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
  <% @categories.each do |category| %>
    <%# <%= cl_image_tag @category.cover.key, height: 300, width: 400, crop: :fill %>
